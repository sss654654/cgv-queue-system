<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========== Default / Dev: human-readable console output ========== -->
    <springProfile name="default,dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{traceId}] - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Admission Service -->
        <logger name="com.example.admission.service.AdmissionService" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Queue Processor -->
        <logger name="com.example.admission.QueueProcessor" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- WebSocket Service -->
        <logger name="com.example.admission.ws.WebSocketUpdateService" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- ========== Prod: JSON structured logging for Loki/Grafana ========== -->
    <springProfile name="prod">
        <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"service":"cgv-backend","env":"prod"}</customFields>
                <!-- MDC fields (traceId, movieId) are included automatically -->
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="JSON"/>
        </root>
    </springProfile>

</configuration>
